endif

ifeq ($(FPC_VERSION),$(FIXESVERSION))
override FPCOPT+=-dFPC_FIXES
COMPATIBILITY_SORTBASE=1
endif

ifeq ($(FPC_VERSION),$(LEGACYVERSION))
override FPCOPT+=-dFPC_LEGACY
COMPATIBILITY_SORTBASE=1
endif

ifdef RELEASE
override FPCOPT+=-Ur
endif

