[compiler]
includedir=$(INC) $(PROCINC)
sourcedir=$(INC) $(PROCINC) $(COMMON) $(ARCH)

[prerules]
RTL=..
INC=$(RTL)/inc
COMMON=$(RTL)/common
PROCINC=$(RTL)/$(CPU_TARGET)
UNITPREFIX=rtl
SYSTEMUNIT=system
STABLEVERSION=3.2.2
FIXESVERSION=3.2.3
LEGACYVERSION=3.1.1
override FPCOPT+=@rtl.cfg

ifeq ($(FPC_VERSION),$(STABLEVERSION))
override FPCOPT+=-dFPC_STABLE
