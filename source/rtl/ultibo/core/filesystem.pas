      {Create Drive}
      Drive:=TDiskDrive.Create(FDriver,Self,ADriveNo);
      Drive.DriveInit;
      
      {Mount Volume}
      Result:=Recognizer.MountVolume(Self,Drive);
     end
    else
     begin
      {Mount Volume}
      Result:=Recognizer.MountVolume(Self,nil);
     end;
   
    {Unlock Recognizer}
    Recognizer.ReaderUnlock;
   end;
 finally  
  WriterUnlock;
 end; 
