      begin
       ASearchRec.ExcludeAttr:=not AAttr and faSpecial;
       ASearchRec.FindHandle:=FileSearchRec.FindHandle;
       ASearchRec.FindData:=FileSearchRec.FindData;
      
       Result:=FindMatchingFile(nil,Volume,ASearchRec);
