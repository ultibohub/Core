       case OpenMode of
        fmOpenRead:begin
          {Check Share Mode of previous handle}
          if CurrentHandle.ShareMode = fmShareCompat then Exit;   {Compat is same as Exclusive}
          if CurrentHandle.ShareMode = fmShareExclusive then Exit;
