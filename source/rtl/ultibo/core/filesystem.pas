   if (StartSector + Start + Count) > Device.SectorCount then Exit;
  
   {Read to Buffer}
   if FDriver.Cache.DeviceRead(Device,StartSector + Start,Count,ABuffer) then
    begin
     Handle.Position:=Handle.Position + ACount;
     Result:=ACount;
    end;
  finally
   {Unlock Handle}
   Handle.WriterUnlock;
  end; 
 finally  
  ReaderUnlock;
 end; 
end;

