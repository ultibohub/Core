function TFileSystem.SplitStream(const AStream:String;var AName,AType:String):Boolean;
{Split a Stream into the component parts (Name and Type)}
{Stream must not contain drive, path or file components}
var
 PosIdx:Integer;
 WorkChar:String;
 WorkBuffer:String;
