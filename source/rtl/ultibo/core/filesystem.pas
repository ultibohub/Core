   if (Start + Count) > SectorCount then Exit;
  
   {Read to Buffer}
   if FDriver.Cache.DeviceRead(Self,Start,Count,ABuffer) then
    begin
     Handle.Position:=Handle.Position + ACount;
     Result:=ACount;
    end;
  finally
   {Unlock Handle}
   Handle.WriterUnlock;
  end; 
 finally  
  ReaderUnlock;
 end; 
end;

