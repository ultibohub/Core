     Volume.ReaderUnlock;
    end; 
   end
  else
   begin
    try
     if Drive.FileSystem = nil then Exit;
   
     if Drive.FileSystem.FindFirstEx(APath,FileSearchRec) = 0 then
      begin
       ASearchRec.ExcludeAttr:=not AAttr and faSpecial;
