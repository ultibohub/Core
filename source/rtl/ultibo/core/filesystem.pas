 if WorkBuffer[1] = WorkChar then
  begin
   Delete(WorkBuffer,1,1);
  end;
  
 {Check Separator}
 PosIdx:=Pos(WorkChar,WorkBuffer);
 if PosIdx <> 0 then
  begin
   {Get Name}
   AName:=Copy(WorkBuffer,1,PosIdx - 1);
   
   {Get Type} {Remove the Separator}
   AType:=Copy(WorkBuffer,PosIdx + 1,Length(WorkBuffer));
  end
 else
  begin
   {Get Name}
   AName:=WorkBuffer;
   
   {Get Type}
   AType:='';
  end;
  
 Result:=True;
