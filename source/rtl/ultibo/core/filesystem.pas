 {}
 Result:=0;

 if not ReaderLock then Exit;
 try
  {$IFDEF FILESYS_DEBUG}
  if FILESYS_LOG_ENABLED then FileSysLogDebug('TDiskVolume.ReadVolume (Name= ' + Name + ')');
