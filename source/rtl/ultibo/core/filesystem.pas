      FRoot.AltName:=FRootPath;
     end;
   end
  else
   begin
    {Unbind}
    if ADrive <> nil then Exit;
    
    {Unbind from Drive}
    FDrive.FileSystem:=nil;
    
    {Set Drive}
    FDrive:=nil;
    
    {Setup Defaults}
    FRootChar:=LoadRootChar;
    FRootName:=LoadRootName;
    FRootPath:=LoadRootPath;
    
    {Check Root}
    if FRoot <> nil then
     begin
      {Setup Defaults}
      FRoot.Name:=FRootName;
      FRoot.AltName:=FRootPath;
     end;
   end;
 finally  
  WriterUnlock;
