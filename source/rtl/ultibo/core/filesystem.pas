     Result:=True;
    end;
   psDIRTY:begin
     if not KeyUnlink(THashCachePage(APage)) then Exit;
     
     if not UnlinkDirty(APage) then Exit;
     APage.PageState:=psUNKNOWN;
     
     if not UnlinkPage(APage) then Exit;
