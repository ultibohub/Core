begin
 {Base Implementation}
 Result:=False;
 
 if FDriver = nil then Exit;
 if Length(AFile) = 0 then Exit;

 {Check Separator}
 PosIdx:=Pos(GetFileChar,AFile);
 if PosIdx <> 0 then
  begin
   {Get Name}
