begin
 {}
 Result:=nil;
 
 if not AcquireLock then Exit;
 try
  if FDriver = nil then Exit;
  
  {Get First Empty Page}
  Result:=FFirstEmpty;
  if Result <> nil then Exit;
  
  {If no Empty then Discard Oldest}
