{Note: Caller must hold the lock}
begin
 {}
 Result:=0;
 
 if ADevice = nil then Exit;
 if ADevice.PageCount = 0 then Exit;
  
 while (ADevice.PageCount shr Result) > 1 do
  begin
   Inc(Result);
  end;
end;

