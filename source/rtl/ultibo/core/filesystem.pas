           begin
            {Allocate Failed}
            Inc(FFailCount);
    
            {Get Count}
            WriteCount:=ACount;
            if not CalculateDevicePage(ADevice,ASector,WriteCount) then Exit;
    
            {Direct Write}
            if not ADevice.Controller.Write(ADevice,ASector,WriteCount,Buffer^) then Exit;
