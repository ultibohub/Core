 {$IFDEF FILESYS_DEBUG}
 if FILESYS_LOG_ENABLED then FileSysLogDebug('TDiskPartitioner.CreatePartitionEntry');
 if FILESYS_LOG_ENABLED then FileSysLogDebug('                  Start = ' + IntToStr(AStart));
