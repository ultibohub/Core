function TDiskDevice.ReadDevice(AHandle:Integer;var ABuffer;ACount:Integer):Integer;
{Note: Raw Reads must be in Sector sized multiples}
var
 Start:Int64;
 Count:LongWord;
 Handle:TRawHandle;
begin
 {}
 Result:=0;

 if not ReaderLock then Exit;
 try
  {$IFDEF FILESYS_DEBUG}
